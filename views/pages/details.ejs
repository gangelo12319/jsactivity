<!DOCTYPE html>
<html lang="en">
<head>
  <%- include("../partials/header") %>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-red-600 text-white font-mono">
  <div class="max-w-md mx-auto p-5">
    <!-- Pokédex Frame -->
    <div class="bg-red-800 rounded-xl shadow-lg p-4 border-4 border-black">
      <div class="flex justify-between items-center">
        <div class="w-6 h-6 bg-blue-500 rounded-full border-2 border-white"></div>
        <h1 class="text-3xl font-bold capitalize"><%= pokemon.name %></h1>
        <div class="flex space-x-2">
          <div class="w-4 h-4 bg-yellow-500 rounded-full border border-black"></div>
          <div class="w-4 h-4 bg-green-500 rounded-full border border-black"></div>
        </div>
      </div>
      
      <!-- Pokémon Image -->
      <div class="flex justify-center mt-4">
        <img src="<%= pokemon.sprites.front_default %>" alt="<%= pokemon.name %>" class="w-40 h-40 bg-white p-2 rounded-lg shadow-lg">
      </div>
      
      <!-- Pokémon Details -->
      <div class="bg-gray-100 text-black p-4 rounded-lg mt-4">
        <p class="text-lg font-semibold">Height: <%= pokemon.height %></p>
        <p class="text-lg font-semibold">Weight: <%= pokemon.weight %></p>
        <p class="text-lg font-semibold">Type: <%= pokemon.types.map(t => t.type.name).join(', ') %></p>
      </div>
      
      <!-- Back Button -->
      <div class="text-center mt-5">
        <a href="/" class="px-4 py-2 bg-blue-500 text-white rounded-lg">Back</a>
      </div>
    </div>
  </div>
  <%- include("../partials/footer") %>
</body>
</html>
