<!DOCTYPE html>
<html lang="en">
<head>
  <%- include("../partials/header") %>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-red-600 text-white font-mono">
  <div class="max-w-3xl mx-auto p-5">
    <!-- Pok√©dex Frame -->
    <div class="bg-red-800 rounded-xl shadow-lg p-4 border-4 border-black">
      <div class="flex justify-between items-center">
        <div class="w-6 h-6 bg-blue-500 rounded-full border-2 border-white"></div>
        <h1 class="text-3xl font-bold">Pok√©dex</h1>
        <div class="flex space-x-2">
          <div class="w-4 h-4 bg-yellow-500 rounded-full border border-black"></div>
          <div class="w-4 h-4 bg-green-500 rounded-full border border-black"></div>
        </div>
      </div>
      
      <!-- Search Bar -->
      <form action="/search" method="GET" class="flex bg-gray-200 p-2 rounded-lg mt-4">
        <input type="text" name="name" placeholder="Search Pok√©mon..." class="flex-grow px-4 py-2 text-black rounded-l-lg focus:outline-none">
        <button type="submit" class="bg-blue-500 px-4 py-2 rounded-r-lg">üîç</button>
      </form>

      <!-- Pok√©mon List -->
      <div class="grid grid-cols-2 md:grid-cols-3 gap-4 mt-5">
        <% pokemonList.forEach(pokemon => { %>
          <a href="/pokemon/<%= pokemon.name %>" class="p-4 bg-gray-100 text-black rounded-lg shadow text-center transform hover:scale-105">
            <p class="text-xl capitalize font-semibold"><%= pokemon.name %></p>
          </a>
        <% }); %>
      </div>
    </div>
  </div>
  <%- include("../partials/footer") %>
</body>
</html>